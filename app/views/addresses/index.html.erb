<div class="container mt-4">
  <h1 class="text-center mb-4">Addresses</h1>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Address</th>
        <th scope="col">City</th>
        <th scope="col">Postal Code</th>
        <th scope="col">Province</th>
        <th scope="col" colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.address %></td>
          <td><%= address.city %></td>
          <td><%= address.postal_code %></td>
          <td><%= address.province.name %></td>
          <td><%= link_to 'Edit', edit_address_path(address), class: 'btn btn-warning btn-sm' %></td>
          <td><%= button_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', form: { class: 'd-inline' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Address', new_address_path, class: 'btn btn-primary' %>
</div>
