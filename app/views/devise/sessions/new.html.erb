<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 bg-light p-5">
      <h2 class="text-center mb-4">Sign In</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: "" }) do |f| %>
        <div class="form-group mb-3 ">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter your email.
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
          <div class="invalid-feedback">
            Please enter your password.
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check mb-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Sign In", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
